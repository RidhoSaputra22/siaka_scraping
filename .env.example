# SISKA UNDIPA Scraper Configuration
# Copy this to .env and fill in your credentials

# Login Credentials
SISKA_USERNAME=your_username_here
SISKA_PASSWORD=your_password_here
SISKA_LEVEL=mahasiswa

# Rate Limiting Settings (Recommended values to be respectful to server)
# Delay between requests in seconds (default: 2.0)
SISKA_REQUEST_DELAY=2.0

# Maximum requests per minute (default: 15 - conservative)
SISKA_MAX_REQUESTS_PER_MINUTE=15

# Maximum retry attempts for failed requests (default: 3)
SISKA_MAX_RETRIES=3

# Base delay for exponential backoff in seconds (default: 5.0)
SISKA_RETRY_DELAY_BASE=5.0

# Request timeout in seconds (default: 30)
SISKA_REQUEST_TIMEOUT=30

# Session Configuration
# Keep connection alive between requests (default: True)
SISKA_KEEP_ALIVE=True

# Respect robots.txt (default: True)
SISKA_RESPECT_ROBOTS=True

# User agent string for requests
SISKA_USER_AGENT=SiskaScraper/1.0 (+https://github.com/your-repo)

# Output Settings
OUTPUT_DIR=data
DEFAULT_FORMAT=json

# Debug Settings
DEBUG=False
VERBOSE_LOGGING=False

FLASK_ENV=production
FLASK_DEBUG=False
FLASK_SECRET_KEY=your-very-secure-secret-key-here-please-change-this
FLASK_PORT=5000

# CORS Configuration  
ALLOWED_ORIGINS=https://yourdomain.com,https://api.morowalitoolstore.my.id

# Redis Configuration (for rate limiting)
REDIS_URL=redis://localhost:6379/0

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/api_security.log

# Security
REQUEST_TIMEOUT=30
MAX_REQUEST_SIZE=1048576